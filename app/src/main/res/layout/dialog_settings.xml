<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/textIP"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:text="IP"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="8"
        android:id="@+id/editTextIP"
        android:layout_toRightOf="@+id/textIP"
        android:digits="0123456789."/>

    <TextView
        android:id="@+id/textPort"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:text="Port"
        android:layout_below="@+id/editTextIP"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="8"
        android:id="@+id/editTextPort"
        android:layout_toRightOf="@+id/textPort"
        android:layout_below="@+id/editTextIP"
        android:digits="0123456789"/>

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/dialogButtonOk"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/editTextPort"/>
    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/dialogButtonCancel"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/editTextPort"
        android:layout_toRightOf="@+id/dialogButtonOK"/>

</RelativeLayout>